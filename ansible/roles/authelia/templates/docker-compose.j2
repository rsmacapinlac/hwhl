services:
  authelia:
    image: authelia/authelia:latest
    container_name: authelia
    env_file:
      - .env
    volumes:
      - /data/containers/authelia:/config
    networks:
      - proxy
    labels:
      - 'traefik.enable=true'
      # HTTP to HTTPS redirect
      - 'traefik.http.routers.authelia-http.rule=Host(`{{ authelia_auth_host }}`)'
      - 'traefik.http.routers.authelia-http.entrypoints=http'
      - 'traefik.http.routers.authelia-http.middlewares=https-redirect@file'
      # HTTPS router
      - 'traefik.http.routers.authelia.rule=Host(`{{ authelia_auth_host }}`)'
      - 'traefik.http.routers.authelia.entrypoints=https'
      - 'traefik.http.routers.authelia.tls=true'
      - 'traefik.http.services.authelia.loadbalancer.server.port={{ authelia_port }}'
      # ForwardAuth middleware for protecting other services
      - 'traefik.http.middlewares.authelia.forwardauth.address=http://authelia:{{ authelia_port }}/api/authz/forward-auth'
      - 'traefik.http.middlewares.authelia.forwardauth.trustForwardHeader=true'
      - 'traefik.http.middlewares.authelia.forwardauth.authResponseHeaders=Remote-User,Remote-Groups,Remote-Name,Remote-Email'
      # Watchtower label
      - 'com.centurylinklabs.watchtower.enable=true'
    expose:
      - {{ authelia_port }}
    restart: unless-stopped
    healthcheck:
      disable: true

networks:
  proxy:
    external: true
