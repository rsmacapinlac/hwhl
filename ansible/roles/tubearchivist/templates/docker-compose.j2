---
services:
  tubearchivist:
    container_name: tubearchivist
    restart: unless-stopped
    image: bbilly1/tubearchivist
    env_file:
      - .env
    ports:
      - {{ tubearchivist_port }}:8000
    volumes:
{% for item in tubearchivist %}
      - {{ item.host_folder }}:{{ item.container }}
{% endfor %}
      - /data/containers/tubearchivist/cache:/cache
    environment:
      - HOST_UID={{ tubearchivist_puid | default('1001') }}
      - HOST_GID={{ tubearchivist_pgid | default('1001') }}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 2m
      timeout: 10s
      retries: 3
      start_period: 30s
    depends_on:
      - archivist-es
      - archivist-redis
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.tubearchivist.entrypoints=http"
      - "traefik.http.routers.tubearchivist.rule=Host(`tubearchivist.{{ ansible_facts["hostname"] }}.{{ homelab_domain }}`)"
      - "traefik.http.middlewares.tubearchivist-https-redirect.redirectscheme.scheme=https"
      - "traefik.http.routers.tubearchivist.middlewares=tubearchivist-https-redirect"
      - "traefik.http.routers.tubearchivist-secure.entrypoints=https"
      - "traefik.http.routers.tubearchivist-secure.rule=Host(`tubearchivist.{{ ansible_facts["hostname"] }}.{{ homelab_domain }}`)"
      - "traefik.http.routers.tubearchivist-secure.tls=true"
      - "traefik.http.routers.tubearchivist-secure.service=tubearchivist"
      - "traefik.http.services.tubearchivist.loadbalancer.server.port=8000"
      - "traefik.docker.network=proxy"
    networks:
      - proxy

  archivist-redis:
    image: redis
    container_name: archivist-redis
    restart: unless-stopped
    env_file:
      - .env
    expose:
      - "6379"
    volumes:
      - /data/containers/tubearchivist/redis:/data
    depends_on:
      - archivist-es
    networks:
      - proxy

  archivist-es:
    image: bbilly1/tubearchivist-es
    container_name: archivist-es
    restart: unless-stopped
    env_file:
      - .env
    environment:
      - "xpack.security.enabled=true"
      - "discovery.type=single-node"
      - "path.repo=/usr/share/elasticsearch/data/snapshot"
    volumes:
      - /data/containers/tubearchivist/es:/usr/share/elasticsearch/data
    expose:
      - "9200"
    networks:
      - proxy

networks:
  proxy:
    name: proxy
    external: true
