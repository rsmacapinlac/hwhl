# Paperless-ngx Environment Configuration

# User/Group IDs - match your host system
USERMAP_UID=1001
USERMAP_GID=1001

# Timezone
PAPERLESS_TIME_ZONE={{ timezone | default('America/Vancouver') }}

# Database Configuration (PostgreSQL)
POSTGRES_DB=paperless
POSTGRES_USER=paperless
POSTGRES_PASSWORD=change_this_postgres_password

# Redis Configuration
PAPERLESS_REDIS=redis://broker:6379

# Database Host
PAPERLESS_DBHOST=db
PAPERLESS_DBPASS=change_this_postgres_password

# Secret Key - CHANGE THIS to a random string
PAPERLESS_SECRET_KEY=change_this_to_a_random_secret_key

# Admin User (created on first run)
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=change_this_admin_password

# URL Configuration
PAPERLESS_URL=https://paperless-ngx.{{ ansible_facts['hostname'] | default('localhost') }}.{{ homelab_domain | default('local') }}
{% if paperless_ngx_csrf_trusted_origins is defined %}
PAPERLESS_CSRF_TRUSTED_ORIGINS={{ paperless_ngx_csrf_trusted_origins }}
{% endif %}
