# Nextcloud AIO Environment Configuration
# Generated by ansible - modify values as needed

# Timezone
TZ={{ timezone | default('America/Vancouver') }}

# Apache Configuration for reverse proxy
APACHE_PORT={{ nextcloud_apache_port | default('11000') }}

# Data directory path (host path for Nextcloud data)
NEXTCLOUD_DATADIR={{ nextcloud_data_dir | default('/data/NextCloud') }}/data

# Skip domain validation for internal/reverse proxy setup
SKIP_DOMAIN_VALIDATION=true

# Watchtower docker socket path
WATCHTOWER_DOCKER_SOCKET_PATH=/var/run/docker.sock

