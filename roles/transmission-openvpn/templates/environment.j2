# Transmission OpenVPN Environment Configuration
# This file is managed by Ansible - changes will be overwritten

# User and Group Configuration
PUID={{ media_puid | default('1001') }}
PGID={{ media_pgid | default('1001') }}

# OpenVPN Configuration
OPENVPN_PROVIDER={{ transmission_openvpn_provider | default('MULLVAD') }}
OPENVPN_CONFIG={{ transmission_openvpn_config | default('ch_all') }}
OPENVPN_USERNAME={{ transmission_openvpn_username | default('change_this_username') }}
OPENVPN_PASSWORD={{ transmission_openvpn_password | default('change_this_password') }}

# Network Configuration
LOCAL_NETWORK={{ transmission_local_network | default('10.1.0.0/24') }}

# Transmission Configuration
TRANSMISSION_DOWNLOAD_DIR=/completed
TRANSMISSION_INCOMPLETE_DIR=/incomplete
TRANSMISSION_WATCH_DIR=/watch
TRANSMISSION_RATIO_LIMIT=0
TRANSMISSION_RATIO_LIMIT_ENABLED=true

# Download Paths (mapped in docker-compose)
# Incomplete: /data/arrs/Downloads/transmission/incomplete
# Watch: /data/arrs/Downloads/transmission/watch
# Completed: /data/arrs/Downloads/transmission/completed
