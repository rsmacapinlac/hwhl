version: "3.3"
services:
  homepage:
    restart: unless-stopped
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    ports:
      - 3000:3000
    volumes:
      - /data/containers/homepage:/app/config
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      PUID: 1001
      PGID: 1001
